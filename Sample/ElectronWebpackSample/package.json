{
  "name": "electronWebpackSample",
  "version": "0.0.1",
  "description": "Sample",
  "license": "MIT",
  "scripts": {
    "dev": "webpack --env.production=false",
    "compile": "webpack --env.production",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "build": {
    "appId": "sample.app.hkawa90",
    "category": "Sample",
    "copyright": "Â©2018 Hkawa.",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "description": "Electron Sample Application for Linux",
      "target": [
        "deb",
        "zip",
        "AppImage",
        "snap"
      ],
      "maintainer": "hkawa90",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": "NSIS"
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.5",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "electron": "^2.0.5",
    "electron-builder": "^20.23.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "style-loader": "^0.21.0",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.1.0",
    "webpack-merge": "^4.1.3"
  },
  "dependencies": {
    "source-map-support": "^0.5.6",
    "ssh2": "^0.6.1",
    "xterm": "^3.5.1"
  }
}
